<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="ComputerDB" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:~/h2database/ComputerDB;AUTO_SERVER=TRUE"
                        userId="sa"
                        password="sa">
        </jdbcConnection>

        <javaModelGenerator targetPackage="org.mybatis.model" targetProject="MAVEN" />

        <sqlMapGenerator targetPackage="org.usecases.mybatis.xml" targetProject="MAVEN" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="org.mybatis.dao" targetProject="MAVEN" />


        <table schema="public" tableName="manufacturer">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
        </table>
        <table schema="public" tableName="computer">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
        </table>
        <table schema="public" tableName="processor">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
        </table>
    </context>
</generatorConfiguration>