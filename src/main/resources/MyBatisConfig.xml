<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="org.mybatis.model.Manufacturer" alias="Manufacturer"/>
        <typeAlias type="org.mybatis.model.Computer" alias="Computer"/>
        <typeAlias type="org.mybatis.model.Processor" alias="Processor"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="openejb:Resource/ComputersDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis.xml/ManufacturerMapper.xml"/>
        <mapper resource="mybatis.xml/ComputerMapper.xml"/>
        <mapper resource="mybatis.xml/ProcessorMapper.xml"/>
    </mappers>
</configuration>